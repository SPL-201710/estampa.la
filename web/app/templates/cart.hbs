{{outlet}}
<div class="bcrumbs">
  <div class="container">
    <ul>
      <li>{{#link-to "index"}}Inicio{{/link-to}}</li>
      <li>Configurar Compra</li>
    </ul>
  </div>
</div>

<div class="container">
  <div class="col-md-12">
    <div class="pagenav-wrap">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <div class="pull-left">
            <h4>Valor del envío: {{shippingValue}}</h4>
          </div>
          <div class="pull-right">
            <button class="btn-success" {{action "addCart"}}>Realizar Compra</button>
          </div>
        </div>
      </div>
    </div>
    <div class="space30"></div>
    <div class="row">
    {{#each model as |product|}}
      <div class="col-md-12 col-sm-12">
        <div class="col-md-4 col-sm-4">
          <h3 class="text-center">
            Camiseta Elegida
          </h3>
        </div>
        <div class="col-md-4 col-sm-4">
          <h3 class="text-center">
            Estampas Elegidas
          </h3>
        </div>
        <div class="col-md-4 col-sm-4">
          <h3 class="text-center">
            Información Adicional
          </h3>
        </div>
      </div>
      <div id="{{product.id}}" class="col-md-12 col-sm-12">
        <div class="product-info" style="text-align: center;">
          <div class="product-image col-md-4" style="padding: 0; background-color: {{product.shirt.color.hexadecimalValue}}">
            <img src={{product.shirt.style.image}} class="img-responsive">
          </div>
          <div class="product-image col-md-4" style="padding: 3% 0;">
            {{#each product.printsInShirts as |printinshirt|}}
              <img src="{{printinshirt.print.image}}" class="img-responsive" alt="" style="text-align: center; max-height:100px; margin: 0 auto;"/>
              <h4 class="product-title"><span style="font-weight: bolder;">{{printinshirt.print.name}}</span></h4>
            {{/each}}
          </div>
          <div class="product-image col-md-4" style="padding: 3% 0;">
            <h4 class="product-title"><span>{{product.shirt.style.name}}</span></h4>
            <h4 class="product-title"><span>{{product.shirt.size.name}}</span></h4>
            <h4 class="product-title"><span>{{product.shirt.color.name}}</span></h4>
            <h4 class="product-title"><span>{{product.shirt.material.name}}</span></h4>
            <div class="clearfix space20"></div>
            <h5>Cantidad</h5>
            <select class="select_rating" onchange={{action 'calculate' value="product.id"}} id="product-{{product.id}}">              
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
            </select>
            <br/><br/>
            <!-- <button class="btn-info" {{action "editProduct" product.id}}>Editar Producto</button> -->
            <button class="btn-danger" {{action "deleteProduct" product.id}}>Eliminar del carrito</button>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
    <div class="space30"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <div class="pull-left">
          <h4 style="margin-right: 20px;">Subtotal: {{subtotal}}</h4>
        </div>
        <div class="pull-left">
        <h4>Total: {{total}}</h4>
        </div>
      </div>
    </div>
  </div>
</div>
