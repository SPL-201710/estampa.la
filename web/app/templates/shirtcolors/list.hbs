{{outlet}}
<div class="container">
  <div class="col-md-12">
    <div class="pagenav-wrap">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <div class="pull-right">
            {{#link-to "shirtcolors.add" class="btn btn-success"}}Agregar Color{{/link-to}}
          </div>
        </div>
      </div>
    </div>
    <div class="space50"></div>
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Color</th>
            <th>Editar</th>
            <th>Eliminar</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |color|}}
          <tr>
            <td>{{color.name}}</td>
            <td>{{color.hexadecimalValue}}</td>
            <td>{{#link-to "shirtcolors.edit" color.id class="btn btn-info"}}Editar{{/link-to}}</td>
            <td><button {{action "deleteShirtColor" color}} class="btn btn-danger">Eliminar</button></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
