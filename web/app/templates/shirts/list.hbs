{{outlet}}
<div class="container">
  <div class="col-md-12">
    <div class="pagenav-wrap">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <div class="pull-right">
            {{#link-to "shirts.add" class="btn btn-success"}}Agregar Camiseta{{/link-to}}
          </div>
        </div>
      </div>
    </div>
    <div class="space50"></div>
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th>Estilo</th>
            <th>Talla</th>
            <th>Color</th>
            <th>Material</th>
            <th>Editar</th>
            <th>Eliminar</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.content as |shirt|}}
          <tr>
            <td>{{shirt.style.name}}</td>
            <td>{{shirt.size.name}}</td>
            <td>{{shirt.color.name}}</td>
            <td>{{shirt.material.name}}</td>
            <td>{{#link-to "shirts.edit" shirt.id class="btn btn-info"}}Editar{{/link-to}}</td>
            <td><button {{action "deleteShirt" shirt.id}} class="btn btn-danger">Eliminar</button></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
